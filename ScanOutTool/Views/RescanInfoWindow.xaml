<Window x:Class="ScanOutTool.Views.RescanInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScanOutTool.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Title="RescanInfoWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBox x:Name="txt_Result" FontSize="16" FontWeight="Bold" Grid.Row="0" Background="Blue" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsReadOnly="True">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Triggers>
                            <Trigger Property="Text" Value="OK">
                                <Setter Property="Foreground" Value="Green"/>
                            </Trigger>
                            <Trigger Property="Text" Value="NG">
                                <Setter Property="Foreground" Value="Red"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <TextBox x:Name="txt_Qty" Grid.Row="1" TextWrapping="Wrap" FontSize="14" Foreground="Blue" Background="Gray" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" />
        </Grid>
        <TextBox x:Name="txt_Message" Grid.Column="1" TextWrapping="Wrap" FontSize="14" Foreground="{Binding ElementName=txt_Result, Path=Foreground}"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
    </Grid>
</Window>
